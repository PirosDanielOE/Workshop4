<Window x:Class="ArmyEditor.SnackEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmyEditor"
        xmlns:vms="clr-namespace:ArmyEditor.ViewModels"
        mc:Ignorable="d"
        Title="Edit Properties" Height="222" Width="319">
    <StackPanel x:Name="stack">
        <Label Content="Name" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Name, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Price" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Price, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Quantity" Padding="10" Background="LightBlue" />
        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Button Content="Save" Padding="10" Click="Button_Click"  />
    </StackPanel>
</Window>
